    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        function redirectHome() {
            let irParaHome;
            if (confirm("Você deseja realmente cancelar seu formulário e ir para página principal?")) {
                window.location.href = "/";
            }
        }
        function showSucesso(msg){
            $('#erros').empty();
            let showMsg = `<div class="alert alert-success alert-dismissible fade show" role="alert">
                                <center>${msg}</center>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
                            </div>`;
            $('#erros').append(showMsg);
        }
        function showErros(erros){
            $('#erros').empty();
            let showMsg = `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <center>${erros}</center>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
                            </div>`;
            $('#erros').append(showMsg);
        }
        $(document).ready(function () {
            $('#codigoDiv').hide();
            $('#tipoContato').on('change', function () {
                if (this.value !== "Outro") {
                    $('#nomeDiv').hide();
                    $('#emailDiv').hide();
                    $('#codigoDiv').show();
                } else {
                    $('#nomeDiv').show();
                    $('#emailDiv').show();
                    $('#codigoDiv').hide();
                }
            });
            $('#formContato').submit(function (event) {
                event.preventDefault();
                let nome = $('#nome').val();
                let email = $('#email').val();
                let assunto = $('#tipoContato').val();
                let codigo = $('#codigo').val();
                let mensagem = $('#mensagem').val();
                $.ajax({
                    type: "POST",
                    url: "/nova-mensagem",
                    data: {
                        nome,
                        email,
                        assunto,
                        codigo,
                        mensagem
                    },
                    timeout: 600000,
                    success: function (data) {
                        if(data.errosForm){
                            let erros = data.erros;
                            let msg = "";
                            for(let i = 0; i < erros.length; i++){
                                msg = `${erros[i].msg}<br>`;
                            }
                            showErros(msg);
                        }else if(data.erroCod){
                            showErros(data.msg);
                        }else if(data.status){
                            $('#nome').val("");
                            $('#email').val("");
                            $('#codigo').val("");
                            $('#mensagem').val("");
                            showSucesso(data.msg);
                        }
                    },
                    error: function (e) {
                        console.log("ERROR : ", e);
                    }
                });
            });
        });
    </script>
