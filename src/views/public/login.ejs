    <script>
        function redirectHome() {
            let irParaHome;
            if (confirm("Você deseja realmente cancelar seu formulário e ir para página principal?")) {
                window.location.href = "index-busca.html";
            }
        }
        $(document).ready(function () {
            $('#codigoDiv').hide();
            $('#tipoContato').on('change', function () {
                if (this.value !== "Outro") {
                    $('#nomeDiv').hide();
                    $('#emailDiv').hide();
                    $('#codigoDiv').show();
                } else {
                    $('#nomeDiv').show();
                    $('#emailDiv').show();
                    $('#codigoDiv').hide();
                }
            });
        });
    </script>
