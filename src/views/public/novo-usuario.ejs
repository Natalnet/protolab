    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        function redirectHome() {
            let irParaHome;
            if (confirm("Você deseja realmente cancelar seu formulário e ir para página principal?")) {
                window.location.href = "index-busca.html";
            }
        }
        function showErrosForm(erro) {
            $('#erros').empty();
            let msg = "";
            let erros = erro;
            for (let i = 0; i < erros.length; i++) {
                msg += `${erros[i].msg}<br>`;
            }
            let showMsg = `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <center>${msg}</center>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
                            </div>`;
            $('#erros').append(showMsg);
        }
        function showErrosFile(erro) {
            $('#erros').empty();
            let showMsg = `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <center>${erro}</center>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
                            </div>`;
            $('#erros').append(showMsg);
        }
        $(document).ready(function () {
            $('#formCadastro').hide();
            $('#btnVerificar').click(function (event) {
                event.preventDefault();
                let email = $('#emailVerificar').val();
                $.ajax({
                    type: "POST",
                    url: "/verificar-email-novo-usuario",
                    data: {
                        email
                    },
                    timeout: 600000,
                    success: function (data) {
                        if (data.success) {
                            $('#erro').empty();
                            $('#formCadastro').show();
                            $('#formVerificar').hide();
                            $('#emailCadastro').val(email);
                        } else {
                            $('#erro').empty();
                            let showMsg = `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <center>E-mail não autorizado</center>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
                            </div>`;
                            $('#erro').append(showMsg);
                        }
                    },
                    error: function (e) {
                        console.log("ERROR : ", e);
                    }
                });
            });
            
            $('#formCadastro').submit(function (event) {
                event.preventDefault();
                let nome = $('#nomeCadastro').val()
                let email = $('#emailCadastro').val();
                let senha = $('#senha').val();
                let repetirSenha = $('#repetirSenha').val();
                let arquivo = $("#arquivo")[0].files[0];
                let tipoUsuario = $('#tipoUser').val();
                let formData = new FormData();

                // POPULANDO FORM //
                formData.append('nome', nome);
                formData.append('email', email);
                formData.append('senha', senha);
                formData.append('repetirSenha', repetirSenha);
                formData.append('arquivo', arquivo);
                formData.append('tipoUsuario', tipoUsuario);
                // POPULANDO FORM //

                $.ajax({
                    type: "POST",
                    enctype: 'multipart/form-data',
                    url: "/criar-novo-usuario",
                    data: formData,
                    processData: false,
                    contentType: false,
                    cache: false,
                    timeout: 600000,
                    success: function (data) {
                        if (data.errosForm) {
                            showErrosForm(data.erros);
                        }else if(data.statusErroFile){
                            showErrosFile(data.msg);
                        }else{
                            window.location.href = "/dashboard"
                        }
                    },
                    error: function (e) {
                        console.log("ERROR : ", e);
                    }
                });

            });

        });
    </script>
