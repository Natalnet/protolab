    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        function showErrosForm(erro) {
            $('#erros').empty();
            let msg = "";
            let erros = erro;
            for (let i = 0; i < erros.length; i++) {
                msg += `${erros[i].msg}<br>`;
            }
            let showMsg = `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <center>${msg}</center>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
                            </div>`;
            $('#erros').append(showMsg);
        }
        function showErrosLogin(erro) {
            $('#erros').empty();
            let showMsg = `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <center>${erro}</center>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
                            </div>`;
            $('#erros').append(showMsg);
        }
        function showSucesso(erro) {
            $('#erros').empty();
            let showMsg = `<div class="alert alert-success alert-dismissible fade show" role="alert">
                                <center>${erro}</center>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
                            </div>`;
            $('#erros').append(showMsg);
        }
        $(document).ready(function () {
            $('#formLogin').submit(function (event) {
                event.preventDefault();
                let email = $('#emailRecuperar').val();
                let token = `<%=token%>`;
                $.ajax({
                    type: "POST",
                    url: "/realizar-recuperacao",
                    data: {
                        token
                    },
                    timeout: 600000,
                    success: function (data) {
                        if (data.errosForm) {
                            showErrosForm(data.erros)
                        } else if (data.errosRecover) {
                            showErrosLogin(data.msg)
                        } else {
                            $('#emailRecuperar').val('');
                            showSucesso('Um e-mail de recuperação foi enviado para ' + email);
                        }
                    },
                    error: function (e) {
                        console.log("ERROR : ", e);
                    }
                });
            });

        });
    </script>
