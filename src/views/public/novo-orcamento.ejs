<body class="">
    <div class="page">
        <div class="page-main">
            <div class="header py-4">
                <div class="container">
                    <div class="d-flex">
                        <a class="header-brand" href="/">
                            <img src="./img/logo.svg" class="header-brand-img" alt="tabler logo">
                        </a>
                        <div class="d-flex flex-row-reverse order-lg-2 ml-auto">
                            <div class="header collapse d-lg-flex p-0" id="headerMenuCollapse">
                                <div class="container">
                                    <div class="row align-items-end">
                                        <div class="col-lg order-lg-first">
                                            <ul class="nav nav-tabs border-0 flex-column flex-lg-row">
                                                <li class="nav-item">
                                                    <a href="/" class="nav-link">
                                                        <i class="fe fe-home"></i>Início</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a href="/novo-processo" class="nav-link">
                                                        <i class="fe fe fe-file-text"></i>Novo processo</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a href="/novo-orcamento" class="nav-link active">
                                                        <i class="fa fa-percent"></i>Novo orçamento</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a href="/contato" class="nav-link">
                                                        <i class="fa fa-envelope"></i>Contato</a>
                                                </li>
                                                <li class="nav-item">
                                                    |
                                                </li>
                                                <li class="nav-item">
                                                    <a href="/login" class="nav-link">
                                                        <i class="fa fa-user-o"></i>Entrar no sistema</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <a href="#" class="header-toggler d-lg-none ml-3 ml-lg-0" data-toggle="collapse" data-target="#headerMenuCollapse">
                            <span class="header-toggler-icon"></span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="my-3 my-md-5">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <form action="https://httpbin.org/post" method="post" class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Formulário para orçamento de projeto</h3>
                                </div>
                                <div class="card-body">
                                    <div class="col-lg-8 offset-lg-2">
                                        <div class="form-group">
                                            <label class="form-label">Nome:
                                                <span class="form-required">*</span>
                                            </label>
                                            <input type="text" class="form-control" placeholder="Insira seu nome aqui" required>
                                        </div>
                                        <div class="form-group">
                                            <label class="form-label">E-mail:
                                                <span class="form-required">*</span>
                                            </label>
                                            <input type="text" class="form-control" placeholder="Insira seu e-mail aqui" required>
                                        </div>
                                        <div class="form-group">
                                            <label class="form-label">Telefone:
                                                <span class="form-required">*</span>
                                            </label>
                                            <input type="tel" class="form-control" placeholder="Insira seu telefone aqui" required/>
                                        </div>
                                        <div class="form-group">
                                            <label class="form-label">Tipo de serviço:
                                                <span class="form-required">*</span>
                                            </label>
                                            <select name="tipoProcesso" class="form-control custom-select">
                                                <option value="nenhum">Nenhum item selecionado</option>
                                                <option value="impressao3d">Impressão 3D</option>
                                                <option value="impressaoPCB">Confecção de PCB</option>
                                            </select>
                                        </div>
                                        <div id="quantidadeDiv" class="form-group">
                                            <label class="form-label">Quantidade:
                                                <span class="form-required">*</span>
                                            </label>
                                            <input type="number" class="form-control" placeholder="Quantidade de peças aqui" required/>
                                        </div>
                                        <div id="configPcbDiv" class="form-group">
                                            <label class="form-label">Configuração para PCB:
                                                <span class="form-required">*</span>
                                            </label>
                                            <select name="tipoProcesso" class="form-control custom-select">
                                                <option value="topLayer">Top Layer</option>
                                                <option value="bottomLayer">Bottom Layer</option>
                                                <option value="dualLayer" disabled>Dual Layer</option>
                                            </select>
                                        </div>
                                        <div id="arquivoDiv" class="form-group">
                                            <div class="form-label">Escolha seu arquivo aqui:
                                                <span class="form-required">*</span>
                                            </div>
                                            <div class="custom-file">
                                                <input type="file">
                                            </div>
                                            <label id="labelAviso" style="color: red; font-size: 14px; font-weight: bold"></label>


                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer text-right">
                                    <div class="d-flex">
                                        <a href="javascript:redirectHome()" class="btn btn-danger">Cancelar</a>
                                        <button type="submit" class="btn btn-primary ml-auto">Enviar</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer class="footer">
            <div class="container">
                <div class="row align-items-center flex-row-reverse">
                    <div class="col-12 col-lg-auto mt-3 mt-lg-0 text-center">
                        Laboratório de Prototipagem. Universidade Federal do Rio Grande do Norte 2018.
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        function redirectHome() {
            let irParaHome;
            if (confirm("Você deseja realmente cancelar seu formulário e ir para página principal?")) {
                window.location.href = "index-busca.html";
            }
        }
        $(document).ready(function () {
            $('#quantidadeDiv').hide();
            $('#configPcbDiv').hide();
            $('#arquivoDiv').hide();
            $('select').on('change', function () {
                if (this.value === "impressao3d") {
                    $('#quantidadeDiv').show();
                    $('#configPcbDiv').hide();
                    $('#arquivoDiv').show();
                    $('#labelAviso').empty();
                    $('#labelAviso').append(`Só serão aceitos arquivos com a extensão ".stl".`);
                } else if (this.value === "impressaoPCB") {
                    $('#quantidadeDiv').show();
                    $('#configPcbDiv').show();
                    $('#arquivoDiv').show();
                    $('#labelAviso').empty();
                    $('#labelAviso').append(`Você só poderá mandar arquivos geber ou com a extensão ".zip".`);
                } else {
                    $('#quantidadeDiv').hide();
                    $('#configPcbDiv').hide();
                    $('#arquivoDiv').hide();
                    $('#labelAviso').empty();
                }
            });
        });
    </script>
</body>

