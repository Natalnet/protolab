    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        function redirectHome() {
            let irParaHome;
            if (confirm("Você deseja realmente cancelar seu formulário e ir para página principal?")) {
                window.location.href = "index-busca.html";
            }
        }
        function showErrosForm(data) {
            let erros = data.erro;
            let msg = "";
            for (let i = 0; i < erros.length; i++) {
                msg += `${erros[i].msg}<br>`;
            }
            let showMsg = `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <center>${msg}</center>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
                            </div>`;
            $('#erros').empty();
            $('#erros').append(showMsg);
            $('#divForm').show();
            $('#gifLoad').hide();
            return;
        }
        function showErrosFile(data) {
            let showMsg = `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <center>${data.msg}</center>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
                            </div>`;
            $('#erros').empty();
            $('#erros').append(showMsg);
            $('#divForm').show();
            $('#gifLoad').hide();
            return;
        }
        $(document).ready(function () {
            $('#gifLoad').hide();
            $('#quantidadeDiv').hide();
            $('#configPcbDiv').hide();
            $('#arquivoDiv').hide();
            $('select').on('change', function () {
                if (this.value === "impressao3d") {
                    $('#quantidadeDiv').show();
                    $('#configPcbDiv').hide();
                    $('#arquivoDiv').show();
                    $('#labelAviso').empty();
                    $('#labelAviso').append(`Só serão aceitos arquivos com a extensão ".stl".`);
                } else if (this.value === "impressaoPCB") {
                    $('#quantidadeDiv').show();
                    $('#configPcbDiv').show();
                    $('#arquivoDiv').show();
                    $('#labelAviso').empty();
                    $('#labelAviso').append(`Você só poderá mandar arquivos geber ou com a extensão ".zip".`);
                } else {
                    $('#quantidadeDiv').hide();
                    $('#configPcbDiv').hide();
                    $('#arquivoDiv').hide();
                    $('#labelAviso').empty();
                }
            });
            $('#formOrcamento').submit(function (event) {
                event.preventDefault();
                let nome = $('#nome').val();
                let email = $('#email').val();
                let telefone = $('#telefone').val();
                let tipoProcesso = $('#tipoProcesso').val();
                let configPcb = $('#configPcb').val();
                let quantidade = $('#quantidade').val();
                let arquivo = $('#arquivo')[0].files[0];
                let formData = new FormData();
                data = {
                    nome,
                    email,
                    telefone,
                    tipoProcesso,
                    configPcb,
                    quantidade,
                    arquivo
                };

                // POPULANDO FORM //
                formData.append('nome', nome);
                formData.append('email', email);
                formData.append('telefone', telefone);
                formData.append('tipoServico', tipoProcesso);
                formData.append('configPcb', configPcb);
                formData.append('quantidade', quantidade);
                formData.append('arquivo', arquivo);
                // POPULANDO FORM //
                $('#divForm').hide();
                $('#gifLoad').show();
                $.ajax({
                    type: "POST",
                    enctype: 'multipart/form-data',
                    url: "/novo-orcamento",
                    data: formData,
                    processData: false,
                    contentType: false,
                    cache: false,
                    timeout: 600000,
                    success: function (data) {
                        if (data.erroForm) {
                            showErrosForm(data);
                        } else if (data.statusErroFile) {
                            showErrosFile(data);
                        } else if (data.status) {
                            $('#divForm').hide();
                            $('#gifLoad').hide();
                            $('#OrcTitle').empty();
                            $('#OrcTitle').append("Orçamento enviado com sucesso")
                            let texto = `<center><h2 style="text-align: justify;">O seu orçamento foi enviado, anote ou guarde o seguinte código: <strong style="color:#B71C1C">${data.codigo}</strong> ele será o principal meio de comunicação entre o PROTOLAB e você, com ele você poderá mandar mensagens para exclarecer dúvidas ou fazer um acompanhamento mais detalhado do seu orçamento. Esse código foi enviado para o seu e-mail: <strong style="color:#1B5E20">${data.email}.</strong></h2></center>`
                            $('#divSucesso').append(texto);
                        }
                    },
                    error: function (e) {
                        console.log("ERROR : ", e);
                    }
                });

            });
        });
    </script>
