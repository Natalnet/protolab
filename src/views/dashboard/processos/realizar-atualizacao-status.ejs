<body class="">
    <div class="page">
        <div class="page-main">
            <div class="header py-4">
                <div class="container">
                    <div class="d-flex">
                        <a class="header-brand" href="/dashboard">
                            <img src="/static/img/logo.svg" class="header-brand-img" alt="tabler logo">
                        </a>
                        <div class="d-flex order-lg-2 ml-auto">
                            <div class="dropdown">
                                <a href="#" class="nav-link pr-0 leading-none" data-toggle="dropdown">
                                    <span class="avatar" style="background-image: url(/get-img-perfil/<%=emailUser%>)"></span>
                                    <span class="ml-2 d-none d-lg-block">
                                        <span class="text-default">
                                            <%=nome%>
                                        </span>
                                        <small class="text-muted d-block mt-1">
                                            <%=tipoUsuario%>
                                        </small>
                                    </span>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                    <a class="dropdown-item" href="#">
                                        <i class="dropdown-icon fe fe-user"></i> Perfil
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="/dashboard/sair">
                                        <i class="dropdown-icon fe fe-log-out"></i> Sair
                                    </a>
                                </div>
                            </div>
                        </div>
                        <a href="#" class="header-toggler d-lg-none ml-3 ml-lg-0" data-toggle="collapse" data-target="#headerMenuCollapse">
                            <span class="header-toggler-icon"></span>
                        </a>
                    </div>
                </div>
            </div>
            <% include ../components/navbar %>
                <div class="my-3 my-md-5">
                    <div class="container">
                        <div class="page-header"></div>
                        <div class="row row-cards row-deck">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body p-5">
                                        <form id="formAtualizacao">
                                            <div id="formularioDados" class="col-lg-8 offset-lg-2">
                                                <div id="conteudo"></div>
                                                <div class="form-group">
                                                    <label class="form-label">
                                                        Status:
                                                    </label>
                                                    <select id="status" class="form-control custom-select">
                                                        <option value="Concluído">Concluído</option>
                                                        <option value="Cancelado">Cancelado</option>
                                                        <option value="Problema">Problema</option>
                                                        <option value="Produção">Produção</option>
                                                        <option value="Pausado">Pausar</option>
                                                        <option value="Despausar">Despausar</option>
                                                    </select>
                                                </div>
                                                <div id="divMensagem" class="form-group">
                                                    <label class="form-label">
                                                        Mensagem:
                                                    </label>
                                                    <input id="mensagem" class="form-control" type="text">
                                                </div>
                                                <button id="buttonSubmit" value="<%=idProcesso%>" class="btn-block btn btn-success" type="submit">Atualizar status</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>

        <footer class="footer">
            <div class="container">
                <div class="row align-items-center flex-row-reverse">
                    <div class="col-12 col-lg-auto mt-3 mt-lg-0 text-center">
                        Laboratório de Prototipagem. Universidade Federal do Rio Grande do Norte 2018.
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>


    <script>
        $(document).ready(function () {
            $('#mensagem').val("O seu projeto foi concluído.")
            $('#status').on('change', function () {
                if (this.value === "Concluído") {
                    $('#mensagem').val("O seu projeto foi concluído.")
                } else if (this.value === "Cancelado") {
                    $('#mensagem').val("O seu projeto foi cancelado.")
                } else if (this.value === "Problema") {
                    $('#mensagem').val("O seu projeto apresentou algum problema na produção.")
                } else if(this.value === "Produção"){
                    $('#mensagem').val("O seu projeto está em fase de produção.")
                }else{
                    $('#mensagem').val("");
                    $('#divMensagem').hide();
                    $('#mensagem').hide();
                }
            });
            $('#formAtualizacao').submit(function (event) {
                event.preventDefault();
                let id = $('#buttonSubmit').val();
                let status = $('#status').val();
                let msg = $('#mensagem').val();
                $.ajax({
                    type: "POST",
                    url: "/dashboard/realizar-atualizacao-status-processo/",
                    data: {
                        id,
                        status,
                        msg
                    },
                    timeout: 600000,
                    success: function (data) {
                        if (data.success) {
                            $('#conteudo').empty();
                            let html = `<div class="alert alert-success alert-dismissible fade show"                   role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true"></span>
                                </button>
                                <strong>Sucesso!</strong> O status foi atualizado.
                                </div>`;
                            $('#conteudo').append(html);
                        }
                    },
                    error: function (e) {
                        console.log("ERROR : ", e);
                    }
                });
            });
        });
    </script>
</body>

</html>