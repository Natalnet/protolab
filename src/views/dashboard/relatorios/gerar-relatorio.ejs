                <div class="row align-items-center flex-row-reverse">
                    <div class="col-12 col-lg-auto mt-3 mt-lg-0 text-center">
                        Laboratório de Prototipagem. Universidade Federal do Rio Grande do Norte 2018.
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        function download(filename, text) {
            var element = document.createElement('a');
            element.setAttribute('href', 'data:text/plain;charset=utf-8,' + encodeURIComponent(text));
            element.setAttribute('download', filename);

            element.style.display = 'none';
            document.body.appendChild(element);

            element.click();

            document.body.removeChild(element);
        }
    </script>

    <script>

        $(document).ready(function () {
            $('#buscarOrcamentos').click(function () {
                var radioValue = $("input[name='opcao']:checked").val();
                let dataInicial = $('#dataInicial').val();
                let dataFinal = $('#dataFinal').val();
                $.ajax({
                    type: "POST",
                    url: `/dashboard/processar-relatorio`,
                    timeout: 600000,
                    data: {
                        dataInicial,
                        dataFinal,
                        radioValue
                    },
                    success: function (data) {
                        download("relatorio.csv", data);
                    },
                    error: function (e) {
                        console.log("ERROR : ", e);
                    }
                });
            });
        });
    </script>
</body>

</html>